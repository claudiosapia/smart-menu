{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('submit') %}
    {% endfor %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            <h3>{{ message }}</h3>
        </div>
    {% endfor %}

    <!-- Contact section -->
    <section class="contact-section">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6 p-0">
                    <!-- Map -->
                    <div class="map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d10784.188505644011!2d19.053119335158936!3d47.48899529453826!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sbd!4v1533333" style="border:0" allowfullscreen></iframe>
                    </div>
                </div>
                <div class="col-lg-6 p-0">
                    <div class="contact-warp">
                        <div class="section-title mb-0">
                            <h2>Contact Us</h2>
                        </div>
<p>Have a question, comment, or feedback? We'd love to hear from you! Fill out the form below, and our friendly team will get back to you as soon as possible. Whether you're interested in our products or services, have a suggestion for improvement, or just want to say hello, we're always happy to connect with our valued customers.</p>
                        {{ form(emailForm) }}
                    </div>
                </div>
            </div>
        </div>
    </section>

    {% for message in app.flashes('error') %}
    {% endfor %}
{% endblock %}